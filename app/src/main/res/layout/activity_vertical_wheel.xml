<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerticalWheelActivity">
    <TextView
        android:id="@+id/tvSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="12pt"
        app:layout_constraintTop_toTopOf="parent" />

    <com.guanxun.util.GXWheel
        android:id="@+id/wheel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:orientation="vertical"
        app:showFocusCenterLineIndicator="false"
        app:showFocusFrame="true"
        app:focusFrameColor="@color/tiffanyBlue"
        app:focusFrameWidth="4dp"
        app:focusSpotIndicatorRadius="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvSelection"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <com.guanxun.util.GXWheel
            android:id="@+id/amPm"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="0"
            app:textSize="20sp"
            app:focusSpotIndicatorColor="@color/red"
            app:focusSpotIndicatorRadius="5dp"
            app:showFocusCenterLineIndicator="false"
            app:focusCenterLineIndicatorLineWidth="6dp"
            app:orientation="vertical"/>
        <com.guanxun.util.GXWheel
            android:id="@+id/hourWheel"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            app:orientation="vertical"
            app:focusSpotIndicatorColor="@color/red"
            app:focusCenterLineIndicatorLineWidth="4dp"
            app:showFocusCenterLineIndicator="true"
            app:showFocusSpotIndicator="true"
            app:focusSpotIndicatorRadius="6dp"
            app:textSize="20sp"
            app:marginBetweenItem="12dp"
            app:showFocusFrame="true"
            app:focusFrameColor="@color/deepSkyBlue"
            app:focusFrameWidth="6dp"/>

        <TextView
            android:id="@+id/splitText"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:textSize="40pt"/>

        <com.guanxun.util.GXWheel
            android:id="@+id/minuteWheel"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            app:orientation="vertical"
            app:focusSpotIndicatorColor="@color/red"
            app:focusCenterLineIndicatorLineWidth="4dp"
            app:showFocusCenterLineIndicator="true"
            app:showFocusSpotIndicator="true"
            app:focusSpotIndicatorRadius="6dp"
            app:textSize="40sp"
            app:marginBetweenItem="12dp"
            app:showFocusFrame="true"
            app:focusFrameColor="@color/deepSkyBlue"
            app:focusFrameWidth="6dp"/>
    </LinearLayout>

</merge>